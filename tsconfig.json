{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "sourceMap": true,
    "types": ["jest"],
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "*.test.ts",
    "*.test.tsx",
    "*.spec.ts",
    "*.spec.tsx",
    "coverage"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "./next-env.d.ts", "./.eslintrc.js"]
}
